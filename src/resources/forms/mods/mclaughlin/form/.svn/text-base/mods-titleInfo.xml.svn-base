<?xml version="1.0" encoding="UTF-8"?>
<fr:section id="titleInfo-section"
 	  xmlns:xhtml="http://www.w3.org/1999/xhtml"
      xmlns:xforms="http://www.w3.org/2002/xforms"
      xmlns:xs="http://www.w3.org/2001/XMLSchema"
      xmlns:xi="http://www.w3.org/2001/XInclude"
      xmlns:xxi="http://orbeon.org/oxf/xml/xinclude"
	  xmlns:ev="http://www.w3.org/2001/xml-events"
      xmlns:xxforms="http://orbeon.org/oxf/xml/xforms"
      xmlns:mods="http://www.loc.gov/mods/v3"
      xmlns:fr="http://orbeon.org/oxf/xml/form-runner">




   <xforms:label ref="$form-resources/detail/titles/titleInfo"/>
   <xforms:help ref="$form-resources/detail/help/titleInfo"/>
        
        
         <fr:grid columns="5">
  		<fr:tr>
  		<fr:td>
  	
  		
  				 	<xforms:group ref=".">
                                       <xforms:action ev:event="DOMActivate">
                                       <xforms:insert ev:event="DOMActivate" context="." position="after" origin="instance('mods-insert')/insert[@name = 'titleInfo']/mods:titleInfo/@type" />              
                                   </xforms:action>						
                                   <xforms:trigger  bind="buttons-triggers">
                                        <xforms:label>
                                            <img src="/apps/fr/style/add.gif" alt="Add"/>
                           					 <xforms:output  value="$form-resources/detail/labels/titletype" mediatype="text/html"/>
                                        </xforms:label>
                                    </xforms:trigger>
                                    </xforms:group>
                    </fr:td>
                    <fr:td>      
                                <xforms:group ref=".">
                                       <xforms:action ev:event="DOMActivate">
                                       <xforms:insert ev:event="DOMActivate" context="." position="after" origin="instance('mods-insert')/insert[@name = 'titleInfo']/mods:titleInfo/mods:nonSort" />              
                                   </xforms:action>						
                                   <xforms:trigger bind="buttons-triggers">
                                        <xforms:label>
                                            <img src="/apps/fr/style//add.gif" alt="Add"/>
                           					 <xforms:output  value="$form-resources/detail/labels/nonsort" mediatype="text/html"/>
                                        </xforms:label>
                                    </xforms:trigger>
                                    </xforms:group>
                     </fr:td>
                     <fr:td>               
                                     <xforms:group ref=".">
                                       <xforms:action ev:event="DOMActivate">
                                       <xforms:insert ev:event="DOMActivate" context="." position="after" origin="instance('mods-insert')/insert[@name = 'titleInfo']/mods:titleInfo/mods:title" />              
                                   </xforms:action>						
                                   <xforms:trigger bind="buttons-triggers">
                                        <xforms:label>
                                            <img src="/apps/fr/style/add.gif" alt="Add"/>
                           					 <xforms:output  value="$form-resources/detail/labels/title" mediatype="text/html"/>
                                        </xforms:label>
                                    </xforms:trigger>
                                    </xforms:group>
                     </fr:td>
                     <fr:td>               
                                     <xforms:group ref=".">
                                       <xforms:action ev:event="DOMActivate">
                                       <xforms:insert ev:event="DOMActivate" context="." position="after" origin="instance('mods-insert')/insert[@name = 'titleInfo']/mods:titleInfo/mods:subTitle" />              
                                   </xforms:action>						
                                   <xforms:trigger bind="buttons-triggers">
                                        <xforms:label>
                                            <img src="/apps/fr/style/add.gif" alt="Add"/>
                           					 <xforms:output  value="$form-resources/detail/labels/subtitle" mediatype="text/html"/>
                                        </xforms:label>
                                    </xforms:trigger>
                                    </xforms:group>
                      </fr:td>
                      <fr:td>              
                                     <xforms:group ref=".">
                                       <xforms:action ev:event="DOMActivate">
                                       <xforms:insert ev:event="DOMActivate" context="." position="after" origin="instance('mods-insert')/insert[@name = 'titleInfo']/mods:titleInfo/mods:partNumber" />              
                                   </xforms:action>						
                                   <xforms:trigger bind="buttons-triggers">
                                        <xforms:label>
                                            <img src="/apps/fr/style/add.gif" alt="Add"/>
                           					 <xforms:output  value="$form-resources/detail/labels/partnumber" mediatype="text/html"/>
                                        </xforms:label>
                                    </xforms:trigger>
                                    </xforms:group>
                        </fr:td>
                        <fr:td>            
                                          <xforms:group ref=".">
                                       <xforms:action ev:event="DOMActivate">
                                       <xforms:insert ev:event="DOMActivate" context="." position="after" origin="instance('mods-insert')/insert[@name = 'titleInfo']/mods:titleInfo/mods:partName" />              
                                   </xforms:action>						
                                   <xforms:trigger bind="buttons-triggers">
                                        <xforms:label>
                                            <img src="/apps/fr/style/add.gif" alt="Add"/>
                           					 <xforms:output  value="$form-resources/detail/labels/partname" mediatype="text/html"/>
                                        </xforms:label>
                                    </xforms:trigger>
                                    </xforms:group>
  				</fr:td>
  				</fr:tr>
         </fr:grid>
    
    <fr:grid>
     
        <fr:tr>
            <fr:td>
                <xforms:group ref="mods:nonSort">
                    
                    <xforms:group ref=".">
                        <xforms:action ev:event="DOMActivate">
                            <xforms:delete ev:event="DOMActivate"  nodeset="." />
                        </xforms:action>
                        <xforms:trigger appearance="minimal"  bind="buttons-triggers">
                            <xforms:label>
                                <img src="/apps/fr/style/remove.gif" alt="Remove Name Role"/>
                            </xforms:label>
                        </xforms:trigger>
                    </xforms:group>
                    
                    
                    <xforms:input incremental="true" ref="." style="width:10em;">
                        <xforms:label  ref="$form-resources/detail/labels/nonsort" class="forms-hidden"/>
                        <xforms:alert  ref="$form-resources/detail/alerts/nonsort"/>
                        <xforms:help  ref="$form-resources/detail/help/nonsort"/>
                        
                    </xforms:input>
                    
                </xforms:group>
            </fr:td>
            
            <fr:td>    
                <xforms:group ref="@type">
                    
                    <xforms:group ref=".">
                        <xforms:action ev:event="DOMActivate">
                            <xforms:delete ev:event="DOMActivate"  nodeset="." />
                        </xforms:action>
                        <xforms:trigger appearance="minimal"  bind="buttons-triggers">
                            <xforms:label>
                                <img src="/apps/fr/style/remove.gif" alt="Remove Name Role"/>
                            </xforms:label>
                        </xforms:trigger>
                    </xforms:group>
                    
                    <xforms:select1 ref="." incremental="false" class="drop-down" id="additional-titletype" >
                        <xforms:label  ref="$form-resources/detail/labels/titletype" />
                        <xforms:alert  ref="$form-resources/detail/alerts/titletype"/>
                        <xforms:help  ref="$form-resources/detail/help/titletype"/>
                        <xforms:itemset nodeset="$form-resources/lists/titletype/instance//(section|item)">
                            <xforms:label ref="label"/>
                            <xforms:value ref="value"/>
                        </xforms:itemset>
                    </xforms:select1>
                </xforms:group>
            </fr:td>
        </fr:tr>
     
     
        <fr:tr>
            <fr:td colspan="2"> 
        <xforms:group ref="mods:title">
             
                          <xforms:group ref=".">
                                <xforms:action ev:event="DOMActivate">
                                <xforms:delete ev:event="DOMActivate"  nodeset="." />
                                </xforms:action>
                                <xforms:trigger appearance="minimal" bind="buttons-triggers">
                                    <xforms:label>
                                        <img src="/apps/fr/style/remove.gif" alt="Remove Title"/>
                                    </xforms:label>
                                </xforms:trigger>
                            </xforms:group>
                       
                            <xforms:textarea id="mods-titleinfo-title-control" incremental="true" ref=".">
                                <xforms:label  ref="$form-resources/detail/labels/title" />
                                <xforms:alert  ref="$form-resources/detail/alerts/title"/>
                                <xforms:help  ref="$form-resources/detail/help/title"/>
                            </xforms:textarea>
        </xforms:group>	   
            </fr:td>
        </fr:tr>

        <fr:tr> 
            <fr:td  colspan="2">
                <xforms:group ref="mods:subTitle">
                    <xforms:group ref=".">
                        <xforms:action ev:event="DOMActivate">
                            <xforms:delete ev:event="DOMActivate"  nodeset="." />
                        </xforms:action>
                        <xforms:trigger appearance="minimal"  bind="buttons-triggers">
                            <xforms:label>
                                <img src="/apps/fr/style/remove.gif" alt="Remove Name Role"/>
                            </xforms:label>
                        </xforms:trigger>
                    </xforms:group>
          
             <xforms:textarea incremental="true" ref="." >
                    <xforms:label  ref="$form-resources/detail/labels/subtitle" class="forms-hidden"/>
                    <xforms:alert  ref="$form-resources/detail/alerts/subtitle"/>
                    <xforms:help  ref="$form-resources/detail/help/subtitle"/>
             </xforms:textarea>
                </xforms:group> 
            </fr:td>
        </fr:tr>
      
        <fr:tr>
            <fr:td>
        <xforms:group ref="mods:partNumber">   
                    <xforms:group ref=".">
                        <xforms:action ev:event="DOMActivate">
                            <xforms:delete ev:event="DOMActivate"  nodeset="." />
                        </xforms:action>
                        <xforms:trigger appearance="minimal"  bind="buttons-triggers">
                            <xforms:label>
                                <img src="/apps/fr/style/remove.gif" alt="Remove Name Role"/>
                            </xforms:label>
                        </xforms:trigger>
                    </xforms:group>
            <xforms:input incremental="true" ref="." style="width:20em;">
                    <xforms:label  ref="$form-resources/detail/labels/partnumber" class="forms-hidden"/>
                    <xforms:alert  ref="$form-resources/detail/alerts/partnumber"/>
                    <xforms:help  ref="$form-resources/detail/help/partnumber"/>
                    </xforms:input>
        </xforms:group>
        
            </fr:td> 

         <fr:td>            
        <xforms:group ref="mods:partName">
                    <xforms:group ref=".">
                        <xforms:action ev:event="DOMActivate">
                            <xforms:delete ev:event="DOMActivate"  nodeset="." />
                        </xforms:action>
                        <xforms:trigger appearance="minimal"  bind="buttons-triggers">
                            <xforms:label>
                                <img src="/apps/fr/style/remove.gif" alt="Remove Name Role"/>
                            </xforms:label>
                        </xforms:trigger>
                    </xforms:group>
                    
                    <xforms:input incremental="true" ref="." >
                        <xforms:label  ref="$form-resources/detail/labels/partname" class="forms-hidden"/>
                        <xforms:alert  ref="$form-resources/detail/alerts/partname"/>
                        <xforms:help  ref="$form-resources/detail/help/partname"/> 
                    </xforms:input>
           
        </xforms:group>         
         </fr:td>
        </fr:tr>
        

   </fr:grid> 
   
 </fr:section>